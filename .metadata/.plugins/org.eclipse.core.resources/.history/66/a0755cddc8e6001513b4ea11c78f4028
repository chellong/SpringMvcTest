<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:mvc="http://www.springframework.org/schema/mvc" 
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans  
             http://www.springframework.org/schema/beans/spring-beans-3.2.xsd  
             http://www.springframework.org/schema/context   
             http://www.springframework.org/schema/context/spring-context-3.2.xsd  
             http://www.springframework.org/schema/mvc  
             http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd">

	<!-- 配置Handler -->
	<bean id="ItemsController_1" name="/queryItems.action" class="com.example.ssm.controller.ItemsController_1" />
	
	<bean id="ItemsController_2" class="com.example.ssm.controller.ItemsController_2" />

	<context:component-scan base-package="com.example.ssm.controller.ItemsController_1" />
	
	<!-- 处理器映射器 -->
	<bean class="org.springframework.web.servlet.handler.BeanNameUrlHandlerMapping"/>

	<!-- 简单URL映射器,多个映射器可以共存 -->
	<bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
	    <property name="mappings">
	        <props>
	            <prop key="/queryItems_1.action">ItemsController_1</prop>
	            <prop key="/queryItems_2.action">ItemsController_1</prop>
	            <prop key="/queryItems_3.action">ItemsController_2</prop>
	        </props>
	    </property>
	</bean>
	
	<!-- 处理器适配器 -->
	<bean
		class="org.springframework.web.servlet.mvc.SimpleControllerHandlerAdapter">
	    
	</bean>
	<!-- 另一个适配器,要求编写的handle实现HttprequestHandle-->
	<bean 
	    class="org.springframework.web.servlet.mvc.HttpRequestHandlerAdapter">
	</bean>
<!-- 	使用注解 -->
	<mvc:annotation-driven>
	    
	    
	</mvc:annotation-driven>
	<!-- 视图解析器 -->

</beans>